# Streamlit Dashboard - Lightweight Image
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 streamlit && \
    mkdir -p /app && \
    chown -R streamlit:streamlit /app

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# Copy dependency files (README.md required by pyproject.toml)
COPY --chown=streamlit:streamlit pyproject.toml uv.lock README.md ./

# Install dependencies
RUN uv sync --frozen

# Copy application code
COPY --chown=streamlit:streamlit streamlit_app/ ./streamlit_app/
COPY --chown=streamlit:streamlit configs/ ./configs/
COPY --chown=streamlit:streamlit src/ml_framework/core/ ./src/ml_framework/core/

# Create data directories
RUN mkdir -p \
    data/dashboard \
    data/predictions \
    && chown -R streamlit:streamlit data

# Switch to non-root user
USER streamlit

# Add virtual environment to PATH
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app:$PYTHONPATH"

# Streamlit configuration
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_HEADLESS=true

# Expose Streamlit port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run Streamlit
CMD ["streamlit", "run", "streamlit_app/app.py"]
